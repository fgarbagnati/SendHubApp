<div class="container">
<h1>SendHub App</h1>
<hr />

<%= form_for :contacts, remote: true do |f| %>
  <p>
    <%= f.text_field :name, :placeholder => "Name" %>
  </p>
  <p>
    <%= f.text_field :phone_number, :placeholder => "Phone Number" %>
  </p>
  <p>
    <%= f.submit "Add Contact", :class => "btn btn-primary" %>
  </p>
<% end %>

<div class="contact_container">
</div>

</div>